@model backend.Models.Usuario

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<head>
    <style>
        body{
            display: flex;
            flex:1;
            margin:0;
        }
        .main{
            display:flex;
            flex-direction:row;
            flex:1;
            witdth:100%;
            height:100%;
            margin: 0;
            padding: 0;
        }
        .apresentacao{
            width:60%;
            display: flex;
            align-items:center;
            justify-content:center;
        }

        .login{
            width: 40%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            max-height:100hw;
        }
        .LogoLogin{
            width:80%;
        }

        .Content {
            background-color: #fff;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            margin-top: 0px;
            margin: 5px 10px;
            padding: 10px;
            width:80%;
        }

        .InputContainer{
            position: relative;
            width: 100%;
            max-width: 500px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .Input{
            width: 100%;
            padding: 1rem 1.2rem;
            height: 40px;
            background-color: #ffffff;
            border: 1px solid #4e4e4e;
            border-radius: 8px;
            font-size: 1rem;
            outline-color: transparent;
            background-color: #fff;
            color: #ffffff;
        }
        .Input:focus{
            border: 3px solid #ffb25b;
        }

        .Input:not(:placeholder-shown) + span,
        .Input:focus + span {
            color: #ffb25b;
            transform: translateX(10px) translateY(-20px);
            font-size: 0.75rem;
            font-weight: 600;
            padding: 0 3px;
            background-color: #fff;
        }

        .Input:not(span) {
            color: #000;
        }

        .Input:not(:focus) {
            color: #000;
        }
        .InputLabel{
            position: absolute;
            left: 0;
            font-weight: 400;
            padding-left: 1rem;
            font-size: 1.3rem;
            color: #e03c31;
            pointer-events: none;
            transition: 0.6s;
        }
        
        .BkgLogo {
            display:block;
            width:100%;
            background-size: cover;
            z-index: 1;
            
        }
        .Blur{
            display: block;
            position:absolute;
            z-index: 2;
            width: 60%;
            height:100%;
            background: rgba(255, 178, 91, 0.15);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
            backdrop-filter: blur(4px);
        }
        .ImagemLogo{
            display:block;
            position:absolute;
            z-index: 3;
            margin-top:0;
            width:40vw;
        }

        .BtnAcessar {
            margin:5vh 0;
            padding:10px 15px;
            background-color: #ffb25b;
            font-family: 'Arial Rounded MT';
            font-weight:700;
            font-size:1.4vw;
            border-radius:5px;
            cursor:pointer;
            border:none;
        }
    </style>
</head>



<div class="main">
   <div class="apresentacao">
       <div class="Blur"></div>
        <img class="BkgLogo" src="~/assets/ToWebdesign/Logo/bkgHome.jpg" />
       <img class="ImagemLogo" src="~/assets/ToWebdesign/Logo/LogoCompleta .svg" />
    </div>
    <form asp-action="Login" class="login">
        <img class="LogoLogin" src="~/assets/ToWebdesign/Logo/LogoTexto.svg" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="Content">
            <div class="InputContainer">
                <input asp-for="Acesso" class="Input form-control" name="Acesso" placeholder="" />
                <span class="InputLabel">Login</span>
                <span asp-validation-for="Acesso" class="text-danger"></span>
            </div>
        </div>
        <div class="Content">
            <div class="InputContainer">
                <input asp-for="Senha" class="Input form-control" name="Senha" placeholder="" />
                <span class="InputLabel">Senha</span>
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
        </div>
        <div>
            <input type="submit" class="BtnAcessar" value="Acessar" />
        </div>
        

   </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
