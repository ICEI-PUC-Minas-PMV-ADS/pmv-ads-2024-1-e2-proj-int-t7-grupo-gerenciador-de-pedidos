@model IEnumerable<backend.Models.ItemPedido>

@{
    ViewData["Title"] = "Pedido";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}

<header>
    <style>
        .containerImagem {
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
            padding: 0;
        }

        .imagemApresentation {
            background-size: cover;
            width: 100%;
            display: block;
        }

        .image-text {
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 32px;
            text-align: center;
            position: absolute;
            color: aliceblue;
            font-weight: 700;
        }
    </style>
</header>

<nav class="containerImagem">
    <img class="imagemApresentation" src="~/assets/ToWebdesign/BkgOrangeBlock.svg" />
    <p class="image-text">Pedidos</p>
</nav>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pedido)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Produto.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pedido.Id)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
